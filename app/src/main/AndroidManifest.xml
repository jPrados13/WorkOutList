<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.workoutlist">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon_app"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".WorkOutCompletes"
            android:label="@string/workOutRoutine"
            android:parentActivityName=".CompletedRoutines"
            android:theme="@style/AppThemeCompat"></activity>
        <activity
            android:name=".PredefRutines"
            android:label="@string/predefinedRoutines"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CompletedRoutines"
            android:label="@string/workOutRoutine"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".UpdateTask"
            android:label="@string/updateTask"
            android:parentActivityName=".CurrentRoutines" />
        <activity
            android:name=".WorkOutRoutine"
            android:label="@string/workOutRoutine"
            android:parentActivityName=".CurrentRoutines"
            android:theme="@style/AppThemeCompat" />
        <activity
            android:name=".AddTask"
            android:label="@string/addTask"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".CreateRoutine"
            android:label="@string/createRoutines"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".CurrentRoutines"
            android:label="@string/currentRoutines"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".MainActivity" />
    </application>

</manifest>